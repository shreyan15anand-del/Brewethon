<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Teacher Dashboard</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    .teacher-dashboard { max-width: 1400px; margin: 20px auto; padding: 20px; background: white; border-radius: 12px; }
    .teacher-header { text-align: center; margin-bottom: 30px; }
    .teacher-header h1 { color: #333; font-size: 2.2em; margin-bottom: 5px; }
    .teacher-header p { color: #666; font-size: 1.1em; }
    .logout-btn { display: inline-block; margin-top: 10px; padding: 10px 20px; background: #667eea; color: white; border-radius: 8px; border: none; cursor: pointer; font-weight: 600; }
    .logout-btn:hover { background: #5a6bd6; }
    
    .stats-container { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 30px; }
    .stat-card { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 20px; border-radius: 12px; text-align: center; }
    .stat-card h3 { font-size: 2.5em; margin: 0; }
    .stat-card p { margin: 5px 0 0 0; opacity: 0.9; }
    
    .tabs { display: flex; gap: 10px; margin-bottom: 20px; flex-wrap: wrap; }
    .tab-btn { padding: 10px 20px; background: #f0f0f0; border: 2px solid transparent; border-radius: 8px; cursor: pointer; font-weight: 600; transition: 0.3s ease; }
    .tab-btn.active { background: #667eea; color: white; }
    .tab-btn:hover { border-color: #667eea; }
    
    .tab-content { display: none; }
    .tab-content.active { display: block; }
    
    .form-section { background: #f8f9fa; padding: 25px; border-radius: 12px; margin-bottom: 20px; }
    .form-section h2 { color: #333; font-size: 1.5em; margin-bottom: 20px; border-bottom: 2px solid #667eea; padding-bottom: 10px; }
    
    .form-row { display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 15px; margin-bottom: 15px; }
    .form-group label { display: block; color: #333; font-weight: 600; margin-bottom: 5px; }
    .form-group input, .form-group select, .form-group textarea { width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 6px; font-size: 1em; font-family: inherit; }
    .form-group input:focus, .form-group select:focus, .form-group textarea:focus { outline: none; border-color: #667eea; box-shadow: 0 0 5px rgba(102,126,234,0.3); }
    .form-group textarea { resize: vertical; min-height: 80px; }
    
    .btn-submit { padding: 10px 25px; background: #667eea; color: white; border: none; border-radius: 6px; cursor: pointer; font-weight: 600; transition: 0.3s ease; }
    .btn-submit:hover { background: #5a6bd6; }
    
    .items-list { margin-top: 20px; }
    .item-card { background: white; padding: 15px; border-radius: 8px; margin-bottom: 10px; border-left: 4px solid #667eea; display: flex; justify-content: space-between; align-items: flex-start; }
    .item-info h4 { color: #333; margin: 0 0 5px 0; font-size: 1.1em; }
    .item-info p { color: #666; margin: 2px 0; font-size: 0.9em; }
    .item-meta { color: #999; font-size: 0.85em; margin-top: 5px; }
    .priority-high { border-left-color: #dc3545; }
    .priority-medium { border-left-color: #ffc107; }
    .priority-low { border-left-color: #28a745; }
    
    .btn-delete { padding: 6px 14px; background: #dc3545; color: white; border: none; border-radius: 4px; cursor: pointer; font-size: 0.85em; }
    .btn-delete:hover { background: #c82333; }
    
    .message { padding: 12px 15px; border-radius: 6px; margin-bottom: 15px; }
    .message.success { background: #d4edda; color: #155724; border: 1px solid #c3e6cb; }
    .message.error { background: #f8d7da; color: #721c24; border: 1px solid #f5c6cb; }
    
    @media (max-width: 768px) {
      .form-row { grid-template-columns: 1fr; }
      .item-card { flex-direction: column; }
      .stat-card h3 { font-size: 2em; }
    }
  </style>
</head>
<body>
  <div class="teacher-dashboard">
    <div class="teacher-header">
      <h1>Teacher Dashboard</h1>
      <p>Welcome, <%= teacherName %></p>
      <form action="/teacher/logout" method="POST" style="display: inline;">
        <button type="submit" class="logout-btn">Logout</button>
      </form>
    </div>

    <% if (successMessage) { %>
      <div class="message success"><%= successMessage %></div>
    <% } %>
    <% if (errorMessage) { %>
      <div class="message error"><%= errorMessage %></div>
    <% } %>

    <!-- Stats Section -->
    <div class="stats-container">
      <div class="stat-card">
        <h3><%= totalAssignments %></h3>
        <p>Assignments Posted</p>
      </div>
      <div class="stat-card">
        <h3><%= totalCirculars %></h3>
        <p>Circulars Posted</p>
      </div>
      <div class="stat-card">
        <h3><%= totalExams %></h3>
        <p>Exams Scheduled</p>
      </div>
    </div>

    <!-- Tabs Navigation -->
    <div class="tabs">
      <button class="tab-btn active" onclick="switchTab('add-assignment')">Post Assignment</button>
      <button class="tab-btn" onclick="switchTab('add-circular')">Post Circular</button>
      <button class="tab-btn" onclick="switchTab('add-exam')">Schedule Exam</button>
      <button class="tab-btn" onclick="switchTab('view-assignments')">View Assignments</button>
      <button class="tab-btn" onclick="switchTab('view-circulars')">View Circulars</button>
      <button class="tab-btn" onclick="switchTab('view-exams')">View Exams</button>
    </div>

    <!-- Post Assignment Tab -->
    <div id="add-assignment" class="tab-content active">
      <div class="form-section">
        <h2>Post New Assignment</h2>
        <form action="/teacher/dashboard/add-assignment" method="POST">
          <div class="form-row">
            <div class="form-group">
              <label>Assignment Title</label>
              <input type="text" name="title" placeholder="e.g., Chapter 5 Exercises" required>
            </div>
            <div class="form-group">
              <label>Subject</label>
              <input type="text" name="subject" placeholder="e.g., Data Structures" required>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label>Description</label>
              <textarea name="description" placeholder="Assignment details and instructions" required></textarea>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label>Due Date</label>
              <input type="datetime-local" name="dueDate" required>
            </div>
          </div>
          <button type="submit" class="btn-submit">Post Assignment</button>
        </form>
      </div>
    </div>

    <!-- Post Circular Tab -->
    <div id="add-circular" class="tab-content">
      <div class="form-section">
        <h2>Post New Circular</h2>
        <form action="/teacher/dashboard/add-circular" method="POST">
          <div class="form-row">
            <div class="form-group">
              <label>Circular Title</label>
              <input type="text" name="title" placeholder="e.g., Class Postponed" required>
            </div>
            <div class="form-group">
              <label>Priority Level</label>
              <select name="priority">
                <option value="low">Low</option>
                <option value="medium" selected>Medium</option>
                <option value="high">High</option>
              </select>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label>Content</label>
              <textarea name="content" placeholder="Circular message and details" required></textarea>
            </div>
          </div>
          <button type="submit" class="btn-submit">Post Circular</button>
        </form>
      </div>
    </div>

    <!-- Schedule Exam Tab -->
    <div id="add-exam" class="tab-content">
      <div class="form-section">
        <h2>Schedule New Exam</h2>
        <form action="/teacher/dashboard/add-exam" method="POST">
          <div class="form-row">
            <div class="form-group">
              <label>Subject</label>
              <input type="text" name="subject" placeholder="e.g., Data Structures" required>
            </div>
            <div class="form-group">
              <label>Exam Type</label>
              <select name="examType">
                <option value="midterm">Mid Term</option>
                <option value="final">Final</option>
                <option value="quiz">Quiz</option>
                <option value="practical">Practical</option>
              </select>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label>Exam Date</label>
              <input type="date" name="examDate" required>
            </div>
            <div class="form-group">
              <label>Exam Time</label>
              <input type="text" name="examTime" placeholder="e.g., 10:00 AM - 12:00 PM" required>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label>Location/Venue</label>
              <input type="text" name="location" placeholder="e.g., Room 101, Block A" required>
            </div>
            <div class="form-group">
              <label>Total Marks</label>
              <input type="number" name="totalMarks" placeholder="e.g., 100" required>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label>Duration</label>
              <input type="text" name="duration" placeholder="e.g., 2 hours" required>
            </div>
            <div class="form-group">
              <label>Description (Optional)</label>
              <input type="text" name="description" placeholder="Any additional info">
            </div>
          </div>
          <button type="submit" class="btn-submit">Schedule Exam</button>
        </form>
      </div>
    </div>

    <!-- View Assignments Tab -->
    <div id="view-assignments" class="tab-content">
      <div class="form-section">
        <h2>Assignments (<%= assignments.length %>)</h2>
        <div class="items-list">
          <% if (assignments && assignments.length > 0) { %>
            <% assignments.forEach(assignment => { %>
              <div class="item-card">
                <div class="item-info">
                  <h4><%= assignment.title %></h4>
                  <p><strong>Subject:</strong> <%= assignment.subject %></p>
                  <p><strong>Description:</strong> <%= assignment.description.substring(0, 100) %>...</p>
                  <div class="item-meta">
                    <p><strong>Due:</strong> <%= new Date(assignment.dueDate).toLocaleDateString() %></p>
                    <p><strong>Posted:</strong> <%= new Date(assignment.createdAt).toLocaleDateString() %></p>
                  </div>
                </div>
                <form action="/teacher/dashboard/delete-assignment" method="POST" style="display: inline;" onsubmit="return confirm('Delete this assignment?');">
                  <input type="hidden" name="assignmentId" value="<%= assignment._id %>">
                  <button type="submit" class="btn-delete">Delete</button>
                </form>
              </div>
            <% }); %>
          <% } else { %>
            <p style="color: #999; text-align: center; padding: 20px;">No assignments posted yet</p>
          <% } %>
        </div>
      </div>
    </div>

    <!-- View Circulars Tab -->
    <div id="view-circulars" class="tab-content">
      <div class="form-section">
        <h2>Circulars (<%= circulars.length %>)</h2>
        <div class="items-list">
          <% if (circulars && circulars.length > 0) { %>
            <% circulars.forEach(circular => { %>
              <div class="item-card priority-<%= circular.priority %>">
                <div class="item-info">
                  <h4><%= circular.title %></h4>
                  <p><strong>Priority:</strong> <span style="text-transform: uppercase; font-weight: 600;"><%= circular.priority %></span></p>
                  <p><strong>Content:</strong> <%= circular.content.substring(0, 100) %>...</p>
                  <div class="item-meta">
                    <p><strong>Posted:</strong> <%= new Date(circular.createdAt).toLocaleDateString() %></p>
                  </div>
                </div>
                <form action="/teacher/dashboard/delete-circular" method="POST" style="display: inline;" onsubmit="return confirm('Delete this circular?');">
                  <input type="hidden" name="circularId" value="<%= circular._id %>">
                  <button type="submit" class="btn-delete">Delete</button>
                </form>
              </div>
            <% }); %>
          <% } else { %>
            <p style="color: #999; text-align: center; padding: 20px;">No circulars posted yet</p>
          <% } %>
        </div>
      </div>
    </div>

    <!-- View Exams Tab -->
    <div id="view-exams" class="tab-content">
      <div class="form-section">
        <h2>Scheduled Exams (<%= exams.length %>)</h2>
        <div class="items-list">
          <% if (exams && exams.length > 0) { %>
            <% exams.forEach(exam => { %>
              <div class="item-card">
                <div class="item-info">
                  <h4><%= exam.subject %> - <%= exam.examType.toUpperCase() %></h4>
                  <p><strong>Date:</strong> <%= new Date(exam.examDate).toLocaleDateString() %></p>
                  <p><strong>Time:</strong> <%= exam.examTime %></p>
                  <p><strong>Location:</strong> <%= exam.location %></p>
                  <p><strong>Marks:</strong> <%= exam.totalMarks %> | <strong>Duration:</strong> <%= exam.duration %></p>
                  <% if (exam.description) { %>
                    <p><strong>Description:</strong> <%= exam.description %></p>
                  <% } %>
                  <div class="item-meta">
                    <p><strong>Scheduled:</strong> <%= new Date(exam.createdAt).toLocaleDateString() %></p>
                  </div>
                </div>
                <form action="/teacher/dashboard/delete-exam" method="POST" style="display: inline;" onsubmit="return confirm('Delete this exam?');">
                  <input type="hidden" name="examId" value="<%= exam._id %>">
                  <button type="submit" class="btn-delete">Delete</button>
                </form>
              </div>
            <% }); %>
          <% } else { %>
            <p style="color: #999; text-align: center; padding: 20px;">No exams scheduled yet</p>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <script>
    function switchTab(tabName) {
      // Hide all tabs
      const tabs = document.querySelectorAll('.tab-content');
      tabs.forEach(tab => tab.classList.remove('active'));
      
      // Remove active class from all buttons
      const buttons = document.querySelectorAll('.tab-btn');
      buttons.forEach(btn => btn.classList.remove('active'));
      
      // Show selected tab
      document.getElementById(tabName).classList.add('active');
      
      // Add active class to clicked button
      event.target.classList.add('active');
    }
  </script>
</body>
</html>
