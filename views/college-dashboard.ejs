<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>College Dashboard</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    .clg-dashboard { max-width: 1400px; margin: 20px auto; padding: 20px; background: white; border-radius: 12px; }
    .clg-header { text-align: center; margin-bottom: 30px; }
    .clg-header h1 { color: #333; font-size: 2.2em; margin-bottom: 5px; }
    .clg-header p { color: #666; font-size: 1.1em; }
    .logout-btn { display: inline-block; margin-top: 10px; padding: 10px 20px; background: #667eea; color: white; border-radius: 8px; border: none; cursor: pointer; font-weight: 600; }
    .logout-btn:hover { background: #5a6bd6; }
    
    .stats-container { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 30px; }
    .stat-card { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 20px; border-radius: 12px; text-align: center; }
    .stat-card h3 { font-size: 2.5em; margin: 0; }
    .stat-card p { margin: 5px 0 0 0; opacity: 0.9; }
    
    .tabs { display: flex; gap: 10px; margin-bottom: 20px; flex-wrap: wrap; }
    .tab-btn { padding: 10px 20px; background: #f0f0f0; border: 2px solid transparent; border-radius: 8px; cursor: pointer; font-weight: 600; transition: 0.3s ease; }
    .tab-btn.active { background: #667eea; color: white; }
    .tab-btn:hover { border-color: #667eea; }
    
    .tab-content { display: none; }
    .tab-content.active { display: block; }
    
    .form-section { background: #f8f9fa; padding: 25px; border-radius: 12px; margin-bottom: 20px; }
    .form-section h2 { color: #333; font-size: 1.5em; margin-bottom: 20px; border-bottom: 2px solid #667eea; padding-bottom: 10px; }
    
    .form-row { display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 15px; margin-bottom: 15px; }
    .form-group label { display: block; color: #333; font-weight: 600; margin-bottom: 5px; }
    .form-group input, .form-group select { width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 6px; font-size: 1em; }
    .form-group input:focus, .form-group select:focus { outline: none; border-color: #667eea; box-shadow: 0 0 5px rgba(102,126,234,0.3); }
    
    .btn-submit { padding: 10px 25px; background: #667eea; color: white; border: none; border-radius: 6px; cursor: pointer; font-weight: 600; transition: 0.3s ease; }
    .btn-submit:hover { background: #5a6bd6; }
    
    .users-list { margin-top: 20px; }
    .user-card { background: white; padding: 15px; border-radius: 8px; margin-bottom: 10px; display: flex; justify-content: space-between; align-items: center; border-left: 4px solid #667eea; }
    .user-info h4 { color: #333; margin: 0 0 5px 0; }
    .user-info p { color: #666; margin: 2px 0; font-size: 0.9em; }
    
    .btn-delete { padding: 6px 14px; background: #dc3545; color: white; border: none; border-radius: 4px; cursor: pointer; font-size: 0.85em; }
    .btn-delete:hover { background: #c82333; }
    
    .message { padding: 12px 15px; border-radius: 6px; margin-bottom: 15px; }
    .message.success { background: #d4edda; color: #155724; border: 1px solid #c3e6cb; }
    .message.error { background: #f8d7da; color: #721c24; border: 1px solid #f5c6cb; }
    
    @media (max-width: 768px) {
      .form-row { grid-template-columns: 1fr; }
      .stat-card h3 { font-size: 2em; }
    }
  </style>
</head>
<body>
  <div class="clg-dashboard">
    <div class="clg-header">
      <h1><%= collegeName %></h1>
      <p>College Dashboard</p>
      <form action="/college/logout" method="POST" style="display: inline;">
        <button type="submit" class="logout-btn">Logout</button>
      </form>
    </div>

    <% if (successMessage) { %>
      <div class="message success"><%= successMessage %></div>
    <% } %>
    <% if (errorMessage) { %>
      <div class="message error"><%= errorMessage %></div>
    <% } %>

    <!-- Stats Section -->
    <div class="stats-container">
      <div class="stat-card">
        <h3><%= totalStudents %></h3>
        <p>Total Students</p>
      </div>
      <div class="stat-card">
        <h3><%= totalTeachers %></h3>
        <p>Total Teachers</p>
      </div>
      <div class="stat-card">
        <h3><%= totalClubReps %></h3>
        <p>Total Club Reps</p>
      </div>
    </div>

    <!-- Tabs Navigation -->
    <div class="tabs">
      <button class="tab-btn active" onclick="switchTab('add-student')">Add Student</button>
      <button class="tab-btn" onclick="switchTab('add-teacher')">Add Teacher</button>
      <button class="tab-btn" onclick="switchTab('add-club-rep')">Add Club Rep</button>
      <button class="tab-btn" onclick="switchTab('view-students')">View Students</button>
      <button class="tab-btn" onclick="switchTab('view-teachers')">View Teachers</button>
      <button class="tab-btn" onclick="switchTab('view-club-reps')">View Club Reps</button>
    </div>

    <!-- Add Student Tab -->
    <div id="add-student" class="tab-content active">
      <div class="form-section">
        <h2>Add New Student</h2>
        <form action="/college/dashboard/add-student" method="POST">
          <div class="form-row">
            <div class="form-group">
              <label>Student Name</label>
              <input type="text" name="name" placeholder="Full name" required>
            </div>
            <div class="form-group">
              <label>Email</label>
              <input type="email" name="email" placeholder="student@example.com" required>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label>USN (Unique Student Number)</label>
              <input type="text" name="usn" placeholder="USN" required>
            </div>
            <div class="form-group">
              <label>Password</label>
              <input type="password" name="password" placeholder="Enter password" required>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label>Phone Number</label>
              <input type="text" name="phoneNumber" placeholder="Phone number">
            </div>
            <div class="form-group">
              <label>Branch</label>
              <input type="text" name="branch" placeholder="e.g., CSE, ECE">
            </div>
          </div>
          <button type="submit" class="btn-submit">Add Student</button>
        </form>
      </div>
    </div>

    <!-- Add Teacher Tab -->
    <div id="add-teacher" class="tab-content">
      <div class="form-section">
        <h2>Add New Teacher</h2>
        <form action="/college/dashboard/add-teacher" method="POST">
          <div class="form-row">
            <div class="form-group">
              <label>Teacher Name</label>
              <input type="text" name="name" placeholder="Full name" required>
            </div>
            <div class="form-group">
              <label>Email</label>
              <input type="email" name="email" placeholder="teacher@example.com" required>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label>Department</label>
              <input type="text" name="department" placeholder="e.g., Computer Science" required>
            </div>
            <div class="form-group">
              <label>Subject</label>
              <input type="text" name="subject" placeholder="e.g., Data Structures" required>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label>Phone Number</label>
              <input type="text" name="phoneNumber" placeholder="Phone number">
            </div>
            <div class="form-group">
              <label>Password</label>
              <input type="password" name="password" placeholder="Enter password" required>
            </div>
          </div>
          <button type="submit" class="btn-submit">Add Teacher</button>
        </form>
      </div>
    </div>

    <!-- Add Club Rep Tab -->
    <div id="add-club-rep" class="tab-content">
      <div class="form-section">
        <h2>Add New Club Representative</h2>
        <form action="/college/dashboard/add-club-rep" method="POST">
          <div class="form-row">
            <div class="form-group">
              <label>Rep Name</label>
              <input type="text" name="name" placeholder="Full name" required>
            </div>
            <div class="form-group">
              <label>Email</label>
              <input type="email" name="email" placeholder="clubrep@example.com" required>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label>Club Name</label>
              <input type="text" name="clubName" placeholder="Club name" required>
            </div>
            <div class="form-group">
              <label>Phone Number</label>
              <input type="text" name="phoneNumber" placeholder="Phone number">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label>Password</label>
              <input type="password" name="password" placeholder="Enter password" required>
            </div>
          </div>
          <button type="submit" class="btn-submit">Add Club Rep</button>
        </form>
      </div>
    </div>

    <!-- View Students Tab -->
    <div id="view-students" class="tab-content">
      <div class="form-section">
        <h2>Students (<%= students.length %>)</h2>
        <div class="users-list">
          <% if (students && students.length > 0) { %>
            <% students.forEach(student => { %>
              <div class="user-card">
                <div class="user-info">
                  <h4><%= student.name %></h4>
                  <p><strong>Email:</strong> <%= student.email %></p>
                  <p><strong>USN:</strong> <%= student.usn %></p>
                  <p><strong>Branch:</strong> <%= student.branch %></p>
                  <p><strong>Phone:</strong> <%= student.phoneNumber %></p>
                </div>
                <form action="/college/dashboard/delete-student" method="POST" style="display: inline;" onsubmit="return confirm('Delete this student?');">
                  <input type="hidden" name="studentId" value="<%= student._id %>">
                  <button type="submit" class="btn-delete">Delete</button>
                </form>
              </div>
            <% }); %>
          <% } else { %>
            <p style="color: #999; text-align: center; padding: 20px;">No students yet</p>
          <% } %>
        </div>
      </div>
    </div>

    <!-- View Teachers Tab -->
    <div id="view-teachers" class="tab-content">
      <div class="form-section">
        <h2>Teachers (<%= teachers.length %>)</h2>
        <div class="users-list">
          <% if (teachers && teachers.length > 0) { %>
            <% teachers.forEach(teacher => { %>
              <div class="user-card">
                <div class="user-info">
                  <h4><%= teacher.name %></h4>
                  <p><strong>Email:</strong> <%= teacher.email %></p>
                  <p><strong>Department:</strong> <%= teacher.department %></p>
                  <p><strong>Subject:</strong> <%= teacher.subject %></p>
                  <p><strong>Phone:</strong> <%= teacher.phoneNumber %></p>
                </div>
                <form action="/college/dashboard/delete-teacher" method="POST" style="display: inline;" onsubmit="return confirm('Delete this teacher?');">
                  <input type="hidden" name="teacherId" value="<%= teacher._id %>">
                  <button type="submit" class="btn-delete">Delete</button>
                </form>
              </div>
            <% }); %>
          <% } else { %>
            <p style="color: #999; text-align: center; padding: 20px;">No teachers yet</p>
          <% } %>
        </div>
      </div>
    </div>

    <!-- View Club Reps Tab -->
    <div id="view-club-reps" class="tab-content">
      <div class="form-section">
        <h2>Club Representatives (<%= clubReps.length %>)</h2>
        <div class="users-list">
          <% if (clubReps && clubReps.length > 0) { %>
            <% clubReps.forEach(rep => { %>
              <div class="user-card">
                <div class="user-info">
                  <h4><%= rep.name %></h4>
                  <p><strong>Email:</strong> <%= rep.email %></p>
                  <p><strong>Club:</strong> <%= rep.clubName %></p>
                  <p><strong>Phone:</strong> <%= rep.phoneNumber %></p>
                </div>
                <form action="/college/dashboard/delete-club-rep" method="POST" style="display: inline;" onsubmit="return confirm('Delete this club rep?');">
                  <input type="hidden" name="clubRepId" value="<%= rep._id %>">
                  <button type="submit" class="btn-delete">Delete</button>
                </form>
              </div>
            <% }); %>
          <% } else { %>
            <p style="color: #999; text-align: center; padding: 20px;">No club representatives yet</p>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <script>
    function switchTab(tabName) {
      // Hide all tabs
      const tabs = document.querySelectorAll('.tab-content');
      tabs.forEach(tab => tab.classList.remove('active'));
      
      // Remove active class from all buttons
      const buttons = document.querySelectorAll('.tab-btn');
      buttons.forEach(btn => btn.classList.remove('active'));
      
      // Show selected tab
      document.getElementById(tabName).classList.add('active');
      
      // Add active class to clicked button
      event.target.classList.add('active');
    }
  </script>
</body>
</html>
